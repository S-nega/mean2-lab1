extends layout

<script src=".\public\javascripts\tasks.js"></script>
link(rel="stylesheet", type="text/css", href="../public/stylesheets/styles.css")

block content


    p <a href=/api/tasks/add> Add task </a>

    each task in tasks
        if task.completed
            <input type="checkbox" name="completed" id="completed" checked=!{task.completed} onchange="toggleCheckbox()"/>
            <s style="color: #666"> !{task.title} | !{task.completed} </s>                
        else
            <input type="checkbox"/>
            <b> !{task.title} | !{task.completed} </b>

        //- <a href="/api/tasks/#{task.id}">edit</a> |
        //- <a href="#">delete</a>
        //- <a href="/api/tasks/show/#{task.id}"> edit </a>
        <a href=/api/tasks/show/#{task.id}> Edit task </a>
        
        form(action="/api/tasks/del/#{task.id}", method="post")
            button(type="submit" value="delete") Delete

        <p style="font-size: 12px; color: #777; padding-left: 20px"> !{task.description}</p> 
        br


