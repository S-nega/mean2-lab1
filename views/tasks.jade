extends layout

<script src=".\public\javascripts\tasks.js"></script>


block content


    p <a href=/api/tasks/add> Add task </a>

    each task in tasks
        if task.completed
            <input type="checkbox" name="completed" id="completed" checked=!{task.completed} onClick="updateTask()"/>
            <s style="color: #666"> !{task.title} | !{task.completed} </s>                
        else
            <input type="checkbox"/>
            <b> !{task.title} | !{task.completed} </b>
        <p style="font-size: 12px; color: #777; padding-left: 20px"> !{task.description}</p> 
        br

        