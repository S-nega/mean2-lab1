extends layout

<script src=".\public\javascripts\tasks.js"></script>
link(rel="stylesheet", type="text/css", href="../public/stylesheets/styles.css")

block content

    div(style="width: 300px; margin: auto; margin-top: 20px; font-family:Arial")
        p <a href="/api/tasks/add" style="text-decoration:none; color:#333; display: flex; justify-content: right;"> Add task </a>

        each task in tasks
            div(style="")
                div(style="padding: 5px 0 5px 30px;")
                    a(href="/api/tasks/completed/#{task.id}" style="text-decoration:none; color: #333; ")
                        if task.completed 
                            <s style="color: #666"> !{task.title} </s>                
                        else
                            <b> !{task.title} </b>

                <p style="font-size: 12px; color: #777; padding-left: 30px; margin: 5px"> !{task.description}</p> 

                div(style="display: flex; flex-wrap: nowrap; width: 300px; justify-content: right;")
                    a(href="/api/tasks/show/#{task.id}" style="padding: 5px; text-decoration: none; color: white; background-color: steelblue; border-radius: 5px; font-size: 13px;") Edit task
                    
                    form(action="/api/tasks/del/#{task.id}", method="post")
                        button(type="submit" value="delete" style="background-color: crimson; color: white; border:0; border-radius:5px; padding:5px; margin-left:10px") Delete

                br